#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
  int n;
  scanf("%d", &n);
  double x[n], y[n];
  for (int i = 0; i < n; i++) {
    scanf("%lf %lf", &x[i], &y[i]);
  }
  double sum_x = 0, sum_y = 0, sum_xy = 0, sum_xx = 0;
  for (int i = 0; i < n; i++) {
    sum_x += x[i];
    sum_y += y[i];
    sum_xy += x[i] * y[i];
    sum_xx += x[i] * x[i];
  }
  double a = (n * sum_xy - sum_x * sum_y) / (n * sum_xx - sum_x * sum_x);
  double b = (sum_y - a * sum_x) / n;
  printf("%lf %lf\n", a, b);
  return 0;
}
